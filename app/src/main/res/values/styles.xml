<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_style" >
        <item name="android:paddingStart">@dimen/button_padding</item>
        <item name="android:paddingEnd">@dimen/button_padding</item>
        <item name="elevation">@dimen/button_elevation</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="title_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="label_text_style">
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

</resources>